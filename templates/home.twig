<!doctype html>
<html>
    {% include'includes/head.twig' %}
    <body>
        {% include 'includes/navigation.twig' %}
       <div class="container-fluid">
         <div class="row">            
         <div class="col-md-2">
             {#for categories#}
             {% include 'includes/categories.twig' %}
         </div>
         <div class="col-md-10">
             {#for products#}
             <div class="row">
               {% for product in products %}
               <a class="text-body col-md-3" href="detail.php?id={{product.product_id}}" style = "text-decoration: none; ">
               <div style="margin-bottom: 20px ; border: 2px dotted #00ccbc;">
                   <h3>{{ product.name }}</h3>
                   <img class="img-fluid" src="images/products/products/{{product.image_file_name}}">
                   <h5 style="text-align:center;">{{ product.price }}</h5>
               </div>
               </a>
               {% endfor %}
             </div>
         </div>
           
         </div>
       </div>
    </body>
</html>